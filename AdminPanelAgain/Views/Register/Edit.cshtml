<div class="modal fade" id="AddUpdateModel" tabindex="1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="AddUpdateModelLabel">Add Client</h4>
            </div>
            <div class="modal-body">
                <form>
                    @* hidden filed for storing Id *@
                    <input type="hidden" id="Id" />
                    <div class="form-group">
                        <label for="txtClientName">User Name</label>
                        <input type="text" class="form-control" id="username" placeholder="Client's Name" />
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Full Name</label>
                        <input type="email" class="form-control" id="fullname" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label for="txtPhoneNo">Last Name</label>
                        <input type="email" class="form-control" id="LastName" placeholder="Phone No" />
                    </div>
                    <div class="form-group">
                        <label for="txtAddress">Password</label>
                        <input type="text" class="form-control" id="Password" placeholder="Address" />
                    </div>
                    <div class="form-group">
                        <label for="txtDetails">Confirm Password</label>
                        <input type="text" class="form-control" id="ConfirmPassword" placeholder="Details" />
                    </div>
                    <div class="form-group">
                        <label for="txtDetails">Address</label>
                        <input type="text" class="form-control" id="Address" placeholder="Details" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddClient" onclick="return AddNewClient();">Add New</button>
                <button type="button" class="btn btn-primary" id="btnUpdateClient" style="display:none;" onclick="return UpdateClient();">Update Client Profile</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
